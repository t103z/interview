       "$ref": "#/definitions/Room"
      }
     },
     "400": {
      "description": "面试房间信息获取失败",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     },
     "401": {
      "description": "用户未登录",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     }
    }
   }
  },
  "/candidate/{canid}": {
   "get": {
    "tags": [
     "candidate"
    ],
    "summary": "查询每个候选人的个人信息",
    "parameters": [
     {
      "name": "canid",
      "in": "path",
      "description": "候选人 id\n",
      "required": true,
