    "produces": [
     "application/json"
    ],
    "parameters": [
     {
      "name": "username",
      "in": "path",
      "description": "用户名",
      "required": true,
      "type": "string"
     }
    ],
    "responses": {
     "200": {
      "description": "读取信息成功",
      "schema": {
       "$ref": "#/definitions/_HR"
      }
     },
     "401": {
      "description": "用户未登陆",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     },
     "404": {
      "description": "用户名不存在",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     }
    }
   },
   "put": {
    "tags": [
     "hr"
    ],
    "summary": "更改HR用户信息",
    "description": "只有已登陆用户可以进行本操作",
    "produces": [
     "application/json"
    ],
    "parameters": [
     {
      "name": "username",
      "in": "path",
      "description": "用户名",
      "required": true,
      "type": "string"
