    "responses": {
     "200": {
      "description": "更改信息成功，返回更改后的信息",
      "schema": {
       "$ref": "#/definitions/_HR"
      }
     },
     "401": {
      "description": "用户未登陆",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     },
     "404": {
      "description": "用户名不存在",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     }
    }
   },
   "delete": {
    "tags": [
     "hr"
    ],
    "summary": "删除HR用户",
    "description": "只有已登陆用户可以进行本操作",
    "produces": [
     "application/json"
    ],
    "parameters": [
     {
      "name": "username",
      "in": "path",
      "description": "用户名",
      "required": true,
      "type": "string"
     }
    ],
    "responses": {
     "200": {
      "description": "删除成功"
     },
     "401": {
      "description": "用户未登陆",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     },
     "404": {
      "description": "用户名不存在",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     }
    }
   }
  }
 },
