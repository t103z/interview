     "application/json"
    ],
    "parameters": [
     {
      "in": "body",
      "name": "body",
      "description": "Created user object",
      "required": true,
      "schema": {
       "$ref": "#/definitions/_HR"
      }
     },
     {
      "name": "key",
      "in": "query",
      "description": "密钥",
      "required": true,
      "type": "integer",
      "format": "int64"
     }
    ],
    "responses": {
     "200": {
      "description": "创建HR用户成功",
      "schema": {
       "$ref": "#/definitions/_HR"
      }
     },
     "400": {
      "description": "注册失败",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     },
     "401": {
      "description": "存在同名用户",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     }
    }
   }
  },
  "/hr/login": {
   "get": {
    "tags": [
     "hr"
    ],
    "summary": "HR登陆",
    "description": "",
    "produces": [
     "application/json"
    ],
    "parameters": [
     {
      "name": "username",
      "in": "query",
      "description": "HR用户名",
      "required": true,
      "type": "string"
     },
     {
      "name": "password",
      "in": "query",
      "description": "加密的密码",
      "required": true,
      "type": "string"
     },
     {
      "name": "key",
      "in": "query",
      "description": "密钥",
      "required": true,
      "type": "integer",
      "format": "int64"
     }
    ],
    "responses": {
     "200": {
      "description": "登陆成功",
      "schema": {
       "type": "string"
      },
      "headers": {
       "X-Rate-Limit": {
        "type": "integer",
        "format": "int32",
        "description": "calls per hour allowed by the user"
       },
       "X-Expires-After": {
        "type": "string",
        "format": "date-time",
        "description": "date in UTC when token expires"
       }
      }
     },
     "400": {
      "description": "登录失败",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     },
     "401": {
      "description": "无效用户名或密码",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     }
    }
   }
  },
  "/hr/logout": {
   "get": {
    "tags": [
     "hr"
    ],
    "summary": "HR log out",
    "description": "",
    "produces": [
     "application/json"
    ],
    "parameters": [],
    "responses": {
     "200": {
      "description": "退出成功"
     },
     "400": {
      "description": "退出失败",
