      "name": "body",
      "in": "body",
      "required": true,
      "schema": {
       "$ref": "#/definitions/_CandidateList"
      }
     }
    ],
    "consumes": [
     "application/json"
    ],
    "produces": [
     "application/json"
    ],
    "responses": {
     "200": {
      "description": "分配房间成功",
      "schema": {
       "$ref": "#/definitions/CandidateList"
      }
     },
     "400": {
      "description": "分配房间失败",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     },
     "401": {
      "description": "用户未登录",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     },
     "403": {
      "description": "用户无权为候选人分配面试房间",
      "schema": {
       "$ref": "#/definitions/Error"
      }
     }
    }
   }
  },
  "/hr/register": {
   "post": {
    "tags": [
     "hr"
    ],
    "summary": "创建HR账户",
    "description": "This can only be done by the register HR.",
